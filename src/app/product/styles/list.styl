.product-list
    .size36
        font-size 36px
    .product
        background-color #fff
        color #444
        border-color #eaebec
        padding 8px 16px
        margin-top 5px
        position relative
        .product-header
            margin-top 8px
            padding-bottom 8px
            border-bottom 1px solid #EAEBEC
            h2
                font-size 14px
                color #2E3440
                padding-left 5px
            .remain
                position absolute
                right 16px
                top 16px
        .product-body
            display table
            width 100%
            min-height 80px
            &>div
                display table-cell
                vertical-align middle
                padding 4px
            .product__interest-rate
                width 60%
                line-height 1
                color #FDA300
                padding-left 5px
            .product__details
                color #62666F
                font-size 14px
                width 40%
                padding-right 5px
                .divider
                    text-align right
        .product-footer
            width 100%
            padding 5px
            border-top 1px solid #EAEBEC
            p
                margin-bottom 0
